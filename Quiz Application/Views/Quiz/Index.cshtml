

@model Quiz_Application.ViewModel.QuizCategoryViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Quiz", FormMethod.Post))
{
    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.CandidateName)
            @Html.TextBoxFor(m => m.CandidateName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryId)
            @Html.DropDownListFor(m => m.CategoryId, Model.ListofCategory, new { @class = "form-control" })
        </div>
        <input type="submit" name="Submit" value="submit" class="btn btn-primary" />
    </div>
}

