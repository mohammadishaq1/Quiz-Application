@model Quiz_Application.ViewModel.AdminViewModel
@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    fieldset{
        border: 3px solid #1f497d;
        background:#ddd;
        border-radius:5px;
        padding:15px;
        margin: 100px 250px 0 250px 
    }

    fieldset legend{
        background:#1f497d;
        color:#fff;
        padding: 5px 10px 10px 20px;
        font-size:15px;
        border-radius:5px;
        box-shadow: 0 0 0 5px #ddd;
        margin: 0 10px 0 1px;
    }
</style>

<section style="margin:10px">
    <fieldset style="min-height:100px">
        <legend>Employee Login</legend>
        @using (Html.BeginForm("Index", "Account", FormMethod.Post))
        {
    <div class="container">
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autocomplete="off" })
            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserPassword)
            @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserPassword, null, new { @class = "text-danger" })
        </div>
        <input type="submit" value="Login" name="Login" class="btn btn-primary" />
    </div>
        }
    </fieldset>
</section>

